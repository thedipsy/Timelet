<androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/fullscreen_image_layout"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="#A1000000"
  android:visibility="gone"
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  xmlns:app="http://schemas.android.com/apk/res-auto">

  <ImageView
    android:id="@+id/fullscreen_image_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scaleType="centerCrop"
    android:visibility="visible"
    android:layout_margin="24dp"
    tools:src="@drawable/ic_launcher_background" />

  <ImageView
    android:id="@+id/close_fullscreen_image"
    android:layout_width="40dp"
    android:layout_height="40dp"
    android:src="@drawable/ic_baseline_close_24"
    android:layout_margin="16dp"
    app:layout_constraintTop_toTopOf="@id/fullscreen_image_view"
    app:layout_constraintEnd_toEndOf="@id/fullscreen_image_view"
    />
</androidx.constraintlayout.widget.ConstraintLayout>